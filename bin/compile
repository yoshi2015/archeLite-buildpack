#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install OpenCV-2-3-1"
BUILD_DIR=$1
VENDOR_DIR="vendor"
DOWNLOAD_URL="https://www3.arche.blue/test/OpenCV-2.3.1-bin.tar.gz"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
curl -L --silent $DOWNLOAD_URL | tar xz

echo "$BUILD_DIR/$VENDOR_DIR" > /etc/ld.so.conf.d/opencv.conf
ldconfig

export PKG_CONFIG_PATH
echo 'export PKG_CONFIG_PATH="$PKG_CONFIG_PATH:$BUILD_DIR/$VENDOR_DIR/lib/pkgconfig"' >> $PROFILE_PATH

